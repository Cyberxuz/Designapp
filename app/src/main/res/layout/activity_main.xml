<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#392B02"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/raleway"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_baseline_search_24"
                android:background="@drawable/edittextbackground"
                android:id="@+id/edittextsearch"
                android:layout_width="250dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"
                android:hint="Search"
                ></EditText>

            <ImageView
                android:id="@+id/backet"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/orva"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                ></ImageView>
            <ImageView
                android:id="@+id/drawermenu"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_dehaze_24"
                android:layout_marginRight="20dp"
                ></ImageView>
            <ImageView
                android:id="@+id/more"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/more"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                ></ImageView>

            <TextView
                android:id="@+id/textviewprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/ic_baseline_lens_24"
                android:textColor="@color/white"
                android:gravity="center"

                ></TextView>
        </RelativeLayout>
    </Toolbar>


        <HorizontalScrollView
            android:layout_width="match_parent"

            android:layout_height="80dp">

            <LinearLayout
                android:padding="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chease"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegeterian"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fact food"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    ></Button>
                <Button

                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burgers"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    ></Button>
            </LinearLayout>

        </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/qwe222"
        android:id="@+id/recyclerview1"></androidx.recyclerview.widget.RecyclerView>
        <HorizontalScrollView
            android:layout_width="match_parent"

            android:layout_height="80dp">

            <LinearLayout
                android:padding="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chease"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegeterian"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fact food"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    ></Button>
                <Button

                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burgers"
                    ></Button>
                <Button
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/buttonbackgroundmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    ></Button>
            </LinearLayout>

        </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:id="@+id/recyclerview2"
        android:background="@drawable/back123"
        ></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        app:menu="@menu/activity_main_drawer"
        app:headerLayout="@layout/headerlayout"
        ></com.google.android.material.navigation.NavigationView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.drawerlayout.widget.DrawerLayout>